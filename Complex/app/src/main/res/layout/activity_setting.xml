<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorGrayTint"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_add_back"
            android:id="@+id/mine_setting_back"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textSize="25sp"
            android:text="偏好设置"
            android:gravity="center"/>
            

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">
        <Switch
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="自动登陆"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/swich_track"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/mine_setting_autologin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="退出当前账号"
            android:background="@color/colorWhite"
            android:textSize="@dimen/normalSize"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/mine_setting_quit"
            android:foreground="?selectableItemBackground"/>

    </LinearLayout>



</LinearLayout>