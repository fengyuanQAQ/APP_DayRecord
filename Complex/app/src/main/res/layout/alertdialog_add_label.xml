<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="8"/>
        <ImageButton
           android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/ic_close"
            android:foreground="?selectableItemBackground"
            android:id="@+id/add_select_dialog_close"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/commonPadding"
        android:paddingRight="@dimen/commonPadding">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalSize"
            android:hint="输入标签"
            android:text=""
            android:layout_weight="8"
            android:id="@+id/add_select_dialog_content"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_confirm"
            android:background="@null"
            android:foreground="?selectableItemBackground"
            android:id="@+id/add_select_dialog_confirm"/>

    </LinearLayout>



</LinearLayout>