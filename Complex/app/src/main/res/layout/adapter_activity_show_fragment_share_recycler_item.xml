<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/show_share_ll_main">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:foreground="?selectableItemBackground"
        android:id="@+id/show_share_cardview"
        app:cardBackgroundColor="@color/colorGrayTint"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorGrayTint">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/defalut"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/bigSize"
                    android:id="@+id/show_share_day"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/smallSize"
                    android:textColor="@color/colorGrayDark"
                    android:text="@string/defalut"
                    android:gravity="center_horizontal"
                    android:id="@+id/show_share_monthAndweek"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:contentPaddingTop="@dimen/commonPadding"
                app:contentPaddingLeft="@dimen/commonPadding"
                app:contentPaddingBottom="@dimen/commonPadding"
                app:contentPaddingRight="@dimen/commonPadding"
                app:cardBackgroundColor="@color/colorWhite"
                android:layout_marginRight="@dimen/commonPadding"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/show_share_ll">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normalSize"
                        android:id="@+id/show_share_content"
                        android:text="记录生活"/>

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:foreground="?selectableItemBackground"
                        android:id="@+id/show_share_image"
                        android:layout_marginTop="@dimen/commonPadding"
                        android:src="@drawable/image_login_book"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/smallSize"
                        android:text="无"
                        android:textColor="@color/colorGrayDark"
                        android:layout_marginTop="@dimen/commonPadding"
                        android:id="@+id/show_share_hourAndmin"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/show_share_hide"
        android:textSize="@dimen/normalSize"
        android:text="END"
        android:textColor="@color/colorGrayDark"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>